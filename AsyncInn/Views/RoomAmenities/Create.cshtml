@model AsyncInn.Models.RoomAmenity

@{
  ViewData["Title"] = "Create";
}

@{
  Layout = "_Layout";
}
<h2>Create New Room Amenity</h2>

<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="Create">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="RoomID" class="control-label"></label>
        <select asp-for="RoomID" class="form-control" asp-items="ViewBag.RoomID"></select>
      </div>
      <div class="form-group">
        <label asp-for="AmenityID" class="control-label"></label>
        <select asp-for="AmenityID" class="form-control" asp-items="ViewBag.AmenityID"></select>
      </div>
      <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
        <a asp-action="Index">Back to List</a>
      </div>
    </form>
  </div>
</div>