@model AsyncInn.Models.HotelRoom

@{
  ViewData["Title"] = "Delete";
}
<head>
  <link href="~/StyleSheet.css" rel="stylesheet" />
</head>

<h2>Delete</h2>

<h3>Are you sure you want to delete this Hotel Room?</h3>
<div>
  <dl class="dl-horizontal">
    <dt>
      @Html.DisplayNameFor(model => model.Hotel): @Html.DisplayFor(model => model.Hotel.Name)
    </dt>
    <dt>
      @Html.DisplayNameFor(model => model.Room): @Html.DisplayFor(model => model.Room.Name)
    </dt>
  </dl>

  <form class="row" asp-action="Delete">
    <input type="hidden" asp-for="HotelID" />
    <input type="hidden" asp-for="RoomID" />
    <input type="submit" value="Delete" class="btn btn-default" /> 
    <a asp-action="Index">Back to List</a>
  </form>
</div>
