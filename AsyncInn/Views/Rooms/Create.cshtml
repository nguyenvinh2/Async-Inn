@model AsyncInn.Models.Room
@using AsyncInn.Models;

@{
  ViewData["Title"] = "Create";
}
@{
  Layout = "_Layout";
}
<h2>Create New Room</h2>

<div class="row">
  <div class="col-md-4">
    <form asp-action="Create">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Layout" class="control-label"></label>
        <select asp-for="Layout" class="form-control" asp-items="Html.GetEnumSelectList<Layout>()"></select>
        <span asp-validation-for="Layout" class="text-danger"></span>
      </div>
      <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
        <a asp-action="Index">Back to List</a>
      </div>
    </form>
  </div>
</div>
